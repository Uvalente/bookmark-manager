<h1>Bookmark Manager</h1>
<ul>
  <% @bookmarks.all.each do |bookmark| %>
    <li>
      <a href='<%= bookmark.url %>' target='_blank'><%= bookmark.title %></a>
      <form action='/bookmarks/<%= bookmark.id %>' method='POST'>
        <input type='hidden' name='_method' value='DELETE'>
        <input type='submit' id='trial' value='Delete <%= bookmark.title %>'>
      </form>
      <form class='update' action='/bookmarks/<%= bookmark.id %>' method='POST'>
        <input type='hidden' name='_method' value='PATCH'>
        <input type='test' name='title' placeholder='Title'>
        <input type='text' name='url' placeholder='URL'>
        <input type='submit' value='Update <%= bookmark.title %>'>
      </form>
    </li>
  <% end %>
</ul>

<form action='/bookmarks' method='POST'>
  <input type='text' name='title' placeholder=' Website Name' required>
  <input type='text' name='url' placeholder=' Website URL' required>
  <input type='submit' value='Add Bookmark'>
</form>
